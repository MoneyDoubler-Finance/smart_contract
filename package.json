        "@solana/web3.js": "^1.98.4",
        "dotenv": "^16.4.5"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.2.1",
        "chai": "^5.1.2",
        "mocha": "^11.0.1",
        "prettier": "^3.4.2",
        "ts-mocha": "^10.0.0",
